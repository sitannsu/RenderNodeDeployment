{
  "info": {
    "name": "NMC Doctor Search API",
    "description": "Collection for searching doctors in NMC database",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Complete Doctor Search",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/search-doctor?name={{name}}&registrationNo={{registrationNo}}&smcId={{smcId}}&year={{year}}",
          "host": ["{{base_url}}"],
          "path": ["api", "search-doctor"],
          "query": [
            {
              "key": "name",
              "value": "{{name}}",
              "description": "Doctor's name to search for (optional)"
            },
            {
              "key": "registrationNo",
              "value": "{{registrationNo}}",
              "description": "Doctor's registration number (optional)"
            },
            {
              "key": "smcId",
              "value": "{{smcId}}",
              "description": "State Medical Council ID (optional)"
            },
            {
              "key": "year",
              "value": "{{year}}",
              "description": "Registration year (optional)"
            }
          ]
        },
        "description": "Search for doctors in the NMC database using any combination of parameters"
      }
    }
  ],
  "variable": [
    {
      "key": "name",
      "value": "",
      "type": "string",
      "description": "Doctor's name to search for"
    },
    {
